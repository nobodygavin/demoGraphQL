type Query {
    books: [Book]
    authors: [Author]
    reviews: [Review]
    author(id: Int!): Author
}

type Book {
    id: Int!
    name: String!
    author: Author!
    reviews: [Review]
}

type Author {
    id: Int!
    name: String!
    biography: String!
    books: [Book]
}

type Review {
    id: Int!
    comment: String!
}